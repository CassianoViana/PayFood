<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_lateral"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111"
    android:choiceMode="singleChoice"
    android:divider="@android:color/transparent"
    android:dividerHeight="0dp"
    android:backgroundTint="@color/fundo_menu">

    <ImageView
        android:id="@+id/imagem_drawer"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/coxinha"
        />

    <LinearLayout
        android:id="@+id/layout_lista_drawer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:layout_below="@+id/imagem_drawer">

        <ListView
            android:id="@+id/lista_menu_lateral"
            android:orientation="vertical"
            android:choiceMode="singleChoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>
    </LinearLayout>
</RelativeLayout>



