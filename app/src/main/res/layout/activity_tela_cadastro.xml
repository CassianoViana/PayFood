<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/tela_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/logo"
        layout="@layout/layout_logo_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/labels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginBottom="35dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView11"
            style="@style/label.h3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cadastro" />

        <TextView
            android:id="@+id/textView10"
            style="@style/label.h5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Você está a poucos passos de uma nova experiência." />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/formulario_cadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/labels"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txtEmail"
            style="@style/field_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="E-mail"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/txtUsuario"
            style="@style/field_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Usuário"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txtSenha"
            style="@style/field_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Senha"
            android:inputType="textPassword" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_economizar"
        style="@style/buttonLogin.normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/formulario_cadastro"
        android:layout_marginTop="48dp"
        android:onClick="onClickEconomizar"
        android:text="Economizar" />

</RelativeLayout>