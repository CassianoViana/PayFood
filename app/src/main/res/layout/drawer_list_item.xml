<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    style="@style/item_menu_lateral">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:id="@+id/nome_menu"
        android:textSize="@dimen/drawer_item_text"
        android:textStyle="bold"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_alignBottom="@+id/icone_menu"
        android:layout_toRightOf="@+id/icone_menu"
        android:layout_toEndOf="@+id/icone_menu"
        style="@style/item_menu_lateral__cor_texto"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icone_menu"
        android:src="@drawable/ic_home_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/item_menu_lateral__cor_texto"/>


</RelativeLayout>