<resources xmlns:android="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarItensBrancos" parent="AppTheme">
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="item_menu_lateral">
        <item name="android:background">@drawable/menu_background_color</item>
        <item name="android:padding">
            16dp
        </item>
    </style>

    <style name="item_menu_lateral__cor_texto">
        <item name="android:tint">@color/menu_text_color</item>
        <item name="android:textColor">@color/menu_text_color</item>
        <item name="android:textSize">
            20sp
        </item>

    </style>

    <style name="toolbar">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>
    <style name="toolbar.title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="fragment_title">
        <item name="android:padding">10dp</item>
    </style>

    <style name="ic_info">
        <item name="android:tint">@color/ic_info</item>
    </style>

    <style name="ic_location">
        <item name="android:tint">@color/ic_location</item>
    </style>

    <style name="customRatingBar" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="android:padding">0dp</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="buttonLogin">
        <item name="android:typeface">serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="buttonLogin.normal">
        <item name="android:background">@drawable/btn_login</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="buttonLogin.inverted">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="field_form">
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:padding">@dimen/padding_fields</item>
        <item name="android:background">@drawable/background_fields_form</item>
        <item name="android:typeface">serif</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textColorHint">#999</item>
    </style>
    <style name="label">
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">serif</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="label.h3">
        <item name="android:textSize">20dp</item>
    </style>
    <style name="label.h5">
        <item name="android:textSize">15dp</item>
    </style>

    <style name="tela_form">
        <item name="android:padding">15dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="btns_simples">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/background_btns_simples</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="well">
        <item name="android:background">@drawable/background_wells</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/black_leve</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="swipe_ball">
        <item name="android:background">@drawable/swipe_ball</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_width">12dp</item>
        <item name="android:layout_height">12dp</item>
    </style>

</resources>
