<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.payfood.payfood">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/payfood"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".TelaInicial"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".telaPrincipal.TelaPrincipal"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".procurandoLanche.estabelecimentos.estabelecimento.TelaEstabelecimento"
            android:screenOrientation="portrait" />
        <activity
            android:name=".procurandoLanche.estabelecimentos.estabelecimento.lanches.lanche.TelaLanche"
            android:screenOrientation="portrait" />
        <activity
            android:name=".entrandoComoUsuario.TelaCadastro"
            android:screenOrientation="portrait" />
        <activity
            android:name=".entrandoComoUsuario.TelaAcessarConta"
            android:screenOrientation="portrait" />
        <activity
            android:name=".entrandoComoUsuario.TelaRecuperarSenha"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.payfood.payfood.configuracoes.usuario.perfil.TelaPerfil"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.payfood.payfood.configuracoes.usuario.perfil.TelaEditarPerfil"
            android:screenOrientation="portrait" />
        <activity
            android:name=".configuracoes.usuario.perfil.planos.TelaPlanos"
            android:screenOrientation="portrait" />
        <activity
            android:name="framework.util.TelaErro"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_tela_erro"
            android:theme="@style/FullscreenTheme" />
    </application>

</manifest>